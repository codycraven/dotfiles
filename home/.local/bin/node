#!/usr/bin/env sh

NODE_VERSION="${NODE_VERSION:-14}"
DIR="$(pwd)"
ARGS="-i"

# If tty
if [ -t 0 ] ; then
	ARGS="${ARGS} -t"
fi

exec docker run $ARGS --rm \
	-u node:node \
	-v "$HOME/.gitconfig:/home/node/.gitconfig" \
	-v "$HOME/.ssh:/home/node/.ssh" \
	-v "$HOME/.npm:/home/node/.npm" \
	-u "$(id -u):$(id -g)" \
	--mount type=bind,source="$HOME"/.npmrc,target=/home/node/.npmrc \
	-v "$DIR:$DIR" \
	-w "$DIR" \
	node:$NODE_VERSION $@
